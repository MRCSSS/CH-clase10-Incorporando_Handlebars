<h2 style="color:blue;">Vista de Productos</h2>

<% if(DB_CONT.length > 0){ %> 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            <!-- filas -->
            <% for (const prod of DB_CONT) {%> 
            <tr> 
                <td><%=prod.title %> </td>
                <td><%=prod.price %> </td>
                <td>
                    <img width="30" src="<%=prod.thumbnail%>" alt="">
                </td>
            </tr>
            <% } %> 
            <!-- Fin filas -->
        </table>
    </div>
<% } else { %> 
    <h3 class="alert alert-warning">No se encontraron productos</h3>
<% } %>
<a href="/">
    <button class="btn btn-secondary mt-3 mb-1">Ir a Home</button>
</a>
